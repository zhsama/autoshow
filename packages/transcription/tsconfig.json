{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "rootDir": "./src",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "references": [{ "path": "../shared" }],
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
